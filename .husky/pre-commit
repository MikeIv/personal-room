#!/bin/sh

# Цвета для вывода
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}═══════════════════════════════════════════════════${NC}"
echo -e "${BLUE}           🚀 HUSKY PRE-COMMIT HOOK              ${NC}"
echo -e "${BLUE}═══════════════════════════════════════════════════${NC}"

# Проверка Vue-файлов на наличие мусора (точек с запятой в HTML-тегах)
VUE_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.vue$' || true)
if [ -n "$VUE_FILES" ]; then
    echo -e "${YELLOW}🔍 Проверка Vue-файлов на наличие синтаксических проблем...${NC}"
    
    PROBLEMS_FOUND=0
    for file in $VUE_FILES; do
        # Получаем содержимое файла из staged area
        STAGED_CONTENT=$(git show ":$file" 2>/dev/null || echo "")
        
        # Извлекаем только template секцию (между <template> и </template>)
        TEMPLATE_SECTION=$(echo "$STAGED_CONTENT" | sed -n '/<template>/,/<\/template>/p' 2>/dev/null || echo "")
        
        if [ -n "$TEMPLATE_SECTION" ]; then
            # Проверяем наличие точек с запятой в HTML-тегах в template секции
            # Паттерны: <div; <tag; >; (но не в атрибутах или комментариях)
            if echo "$TEMPLATE_SECTION" | grep -E '<[a-zA-Z][^>]*;[^>]*>|>[^<]*;' >/dev/null 2>&1; then
                # Исключаем false positives: комментарии, строки в кавычках
                SUSPICIOUS_LINES=$(echo "$TEMPLATE_SECTION" | grep -E '<[a-zA-Z][^>]*;[^>]*>|>[^<]*;' | grep -vE '<!--.*-->|"[^"]*;[^"]*"|''[^'']*;[^'']*''' || true)
                
                if [ -n "$SUSPICIOUS_LINES" ]; then
                    echo -e "${RED}⚠️  Обнаружены потенциальные проблемы в: $file${NC}"
                    echo -e "${YELLOW}   Возможно наличие точек с запятой в HTML-тегах!${NC}"
                    echo -e "${YELLOW}   Проблемные строки:${NC}"
                    echo "$SUSPICIOUS_LINES" | head -3 | sed 's/^/      /'
                    PROBLEMS_FOUND=1
                fi
            fi
        fi
    done
    
    if [ $PROBLEMS_FOUND -eq 1 ]; then
        echo -e "${RED}═══════════════════════════════════════════════════${NC}"
        echo -e "${RED}❌ Обнаружены синтаксические проблемы в Vue-файлах!${NC}"
        echo -e "${YELLOW}💡 Vue-файлы НЕ форматируются автоматически при коммите${NC}"
        echo -e "${YELLOW}   для предотвращения добавления мусора в HTML-теги.${NC}"
        echo -e "${YELLOW}   Пожалуйста, проверьте файлы вручную и исправьте проблемы.${NC}"
        echo -e "${RED}═══════════════════════════════════════════════════${NC}"
        exit 1
    else
        echo -e "${GREEN}✅ Vue-файлы проверены, проблем не обнаружено${NC}"
        echo -e "${YELLOW}ℹ️  Vue-файлы не форматируются автоматически для защиты от мусора${NC}"
    fi
fi

# Безопасное удаление .eslintcache из индекса (только если он там есть)
if git ls-files --cached --error-unmatch .eslintcache >/dev/null 2>&1; then
    echo -e "${YELLOW}🗑️  Удаляем .eslintcache из индекса...${NC}"
    git reset -q HEAD .eslintcache
fi

# Удаляем сам файл .eslintcache если он существует
[ -f .eslintcache ] && rm -f .eslintcache

echo -e "${YELLOW}🔍 Запуск линтинга...${NC}"
if npx lint-staged --verbose; then
    echo -e "${GREEN}✅ Линтинг пройден успешно${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════${NC}"
    echo -e "${GREEN}🎉 Все проверки пройдены! Можете отправлять коммит.${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════${NC}"
    exit 0
else
    LINT_EXIT_CODE=$?
    echo -e "${RED}❌ Обнаружены ошибки линтинга!${NC}"

    echo -e "${YELLOW}💡 Советы:${NC}"
    echo -e "   • Запустите: npm run lint:fix"
    echo -e "${YELLOW}После исправлений:${NC}"
    echo -e "   git add ."
    echo -e "   git commit -m 'ваше сообщение'"
    echo -e "${BLUE}═══════════════════════════════════════════════════${NC}"
    exit $LINT_EXIT_CODE
fi
