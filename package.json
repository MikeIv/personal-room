{
  "name": "personal-room",
  "private": true,
  "type": "module",
  "version": "1.0.6",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "stylelint": "stylelint \"**/*.{vue,scss}\"",
    "stylelint:fix": "stylelint \"**/*.{vue,scss}\" --fix",
    "prepare": "husky",
    "create-mr": "node scripts/create-mr.js"
  },
  "dependencies": {
    "@nuxt/icon": "^2.1.0",
    "@nuxtjs/i18n": "^10.2.1",
    "nuxt": "^4.2.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.7.1",
    "@nuxt/eslint-config": "^1.7.1",
    "@pinia/nuxt": "^0.11.3",
    "@vueuse/core": "^14.0.0",
    "@vueuse/nuxt": "^14.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-vue": "^10.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.93.3",
    "sass-loader": "^13.3.3",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.8.3",
    "vite-plugin-eslint2": "^5.0.4",
    "vite-svg-loader": "^5.1.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "prettier --write",
      "stylelint --fix --allow-empty-input"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
